{
  "apiVersion": "kubedirector.hpe.com/v1beta1",
  "kind": "KubeDirectorApp",
  "metadata": {
    "name": "stefds-webapp"
  },
  "spec": {
    "label": {
      "name": "sds-statefull-webapp",
      "description": "StefDS sample KubeDirector WebApp"
    },
    "distroID": "stefds/webapp",
    "version": "1.0",
    "configSchemaVersion": 8,
    "config": {
      "roleServices": [
        {
          "roleID": "webappRole",
          "serviceIDs": [
            "webappui"
          ]
        }
      ],
      "selectedRoles": [
        "webappRole"
      ]
    },
    "services": [
      {
        "id": "webappui",
        "label": {
          "name": "WebappUI"
        },
        "endpoint": {
          "port": 8090,
          "isDashboard": true,
          "hasAuthToken": false,
          "urlScheme": "http"
        }
      }
    ],
    "roles": [
      {
        "id": "webappRole",
        "cardinality": "2+",
        "minResources": {
          "memory": "100Mi",
          "cpu": "1"
        }
      }
    ],
    "defaultImageRepoTag": "docker.io/stefds/webapp",
    "defaultPersistDirs": [
      "/usr/src/app/private"
    ],
    "capabilities": [],
    "systemdRequired": false,
    "logoURL": "https://raw.githubusercontent.com/StefDS/webapp/master/public/images/nodejs-webapp.png"
  }
}